<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2937"
    android:fitsSystemWindows="true"
    android:padding="24dp">

    <!-- Close button -->
    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:background="@android:color/transparent"
        android:contentDescription="Close"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="48dp"
        android:paddingBottom="16dp">

        <!-- Progress area (shown during processing) -->
        <LinearLayout
            android:id="@+id/progress_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:indeterminate="true"
                android:indeterminateTint="#60A5FA" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Preparing..."
                android:textColor="#9CA3AF"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Result area (shown after transcription) -->
        <ScrollView
            android:id="@+id/result_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginBottom="12dp"
            android:background="#111827"
            android:padding="16dp">

            <TextView
                android:id="@+id/txt_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F3F4F6"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.4"
                android:textIsSelectable="true" />
        </ScrollView>

        <!-- Copy button (shown after transcription) -->
        <Button
            android:id="@+id/btn_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy to clipboard"
            android:visibility="gone"
            android:backgroundTint="#3B82F6"
            android:textColor="#FFFFFF"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

    </LinearLayout>

</FrameLayout>
